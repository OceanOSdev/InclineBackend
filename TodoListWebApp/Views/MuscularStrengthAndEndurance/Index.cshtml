    <script>
        $("#curlUpsSubmit")
        .click(function (e) {
            e.preventDefault(); // This breaks if this is not included, not sure why.
            var source = {
                'CurlUps': $("#curlUps").val(),
                'Logged': $("#curlUpsLogged").val()
            };

            $.ajax({
                type: 'POST',
                url: 'api/curlupsapi',
                data: JSON.stringify(source),
                contentType: 'application/json; charset=utf-8',
                dataType: 'json'
            })
                .complete(function ($data) {
                    location.reload();
