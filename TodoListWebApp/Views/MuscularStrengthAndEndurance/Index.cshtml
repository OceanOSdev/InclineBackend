@model TodoListWebApp.ViewModels.StrengthEnduranceViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Muscular Strength And Endurance</h2>

<div class="row">
    <div class="col-md-6">
        <h3>@Html.DisplayNameFor(m => m.CurlUpModel.CurlUps) Data</h3>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.CurlUpModel.CurlUps)</th>
                <th>@Html.DisplayNameFor(m => m.CurlUpModel.Logged)</th>
            </tr>
            </thead>
            @foreach (var item in Model.CurlUp)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.CurlUps)</td>
                    <td>@Html.DisplayFor(m => item.Logged)</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-6">
        <form id="curlUpForm">
            <h4>Curl Ups</h4>
            <hr />
            <div class="form-group">
                <label class="control-label">Curl Ups</label>
                <input id="curlUps" type="number" name="CurlUps" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Logged</label>
                <input id="curlUpsLogged" name="Logged" type="datetime" value="@DateTime.UtcNow.ToLocalTime()" class="form-control" />
            </div>
            <div class="form-group">
                <input id="curlUpsSubmit" type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

