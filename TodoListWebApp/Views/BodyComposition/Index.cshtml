            </div>
        </form>
    </div>
</div>


@section scripts
{
    <script>
        function deleteHeight(e) {
            //e.preventDefault(); // This breaks if this is not included, not sure why.
            //alert(e.id);
            $.ajax({
                type: 'DELETE',
                url: 'api/heightapi/' + e.id

            })
            .complete(function ($data) {
                location.reload();
            });
        }

        function deleteWeight(e) {
            //e.preventDefault(); // This breaks if this is not included, not sure why.
            //alert(e.id);
            $.ajax({
                type: 'DELETE',
                url: 'api/weightapi/' + e.id

            })
            .complete(function ($data) {
                location.reload();
            });
        }

        function deleteBodyFat(e) {
            //e.preventDefault(); // This breaks if this is not included, not sure why.
            //alert(e.id);
            $.ajax({
                type: 'DELETE',
                url: 'api/bodyfatapi/' + e.id

            })
            .complete(function ($data) {
                location.reload();
            });
        }

        $("#heightSubmit")
            .click(function (e) {
                e.preventDefault(); // This breaks if this is not included, not sure why.
                var source = {
                    'Height': $("#height").val(),
                    'Logged': $("#heightLogged").val()
                };

                $.ajax({
                        type: 'POST',
                        url: 'api/heightapi',
                        data: JSON.stringify(source),
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json'
                    })
                    .complete(function ($data) {
                        location.reload();
                    });
            });

        $("#heightSubmit")
            .click(function (e) {
                e.preventDefault(); // This breaks if this is not included, not sure why.
                var source = {
                    'Weight': $("#weight").val(),
                    'Logged': $("#weightLogged").val()
                };

                $.ajax({
                        type: 'POST',
                        url: 'api/weightapi',
                        data: JSON.stringify(source),
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json'
                    })
                    .complete(function ($data) {
                        location.reload();
                    });
            });

        $("#heightSubmit")
            .click(function (e) {
                e.preventDefault(); // This breaks if this is not included, not sure why.
                var source = {
                    'BodyFat': $("#bodyFat").val(),
                    'Logged': $("#bodyFatLogged").val()
                };

                $.ajax({
                        type: 'POST',
                        url: 'api/bodyfatapi',
                        data: JSON.stringify(source),
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json'
                    })
                    .complete(function ($data) {
                        location.reload();
                    });
            });
    </script>
}
